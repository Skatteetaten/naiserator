{
  "config": {
    "description": "webproxy configuration is injected into the container env",
    "matchType": "subset"
  },
  "input": {
    "kind": "Application",
    "apiVersion": "v1alpha1",
    "metadata": {
      "name": "myapplication",
      "namespace": "mynamespace",
      "uid": "123456",
      "labels": {
        "team": "myteam"
      }
    },
    "spec": {
      "webproxy": true
    }
  },
  "output": [
    {
      "operation": "CreateOrUpdate",
      "resource": {
        "apiVersion": "apps/v1",
        "kind": "Deployment",
        "spec": {
          "template": {
            "spec": {
              "containers": [
                {
                  "name": "myapplication",
                  "env": [
                    {
                      "name": "NAIS_APP_NAME"
                    },
                    {
                      "name": "NAIS_NAMESPACE"
                    },
                    {
                      "name": "NAIS_APP_IMAGE"
                    },
                    {
                      "name": "NAIS_CLUSTER_NAME"
                    },
                    {
                      "name": "NAV_TRUSTSTORE_PATH"
                    },
                    {
                      "name": "NAV_TRUSTSTORE_PASSWORD"
                    },
                    {
                      "name": "HTTP_PROXY",
                      "value": "http://foo.bar:5224"
                    },
                    {
                      "name": "http_proxy",
                      "value": "http://foo.bar:5224"
                    },
                    {
                      "name": "HTTPS_PROXY",
                      "value": "http://foo.bar:5224"
                    },
                    {
                      "name": "https_proxy",
                      "value": "http://foo.bar:5224"
                    },
                    {
                      "name": "NO_PROXY",
                      "value": "foo,bar,baz"
                    },
                    {
                      "name": "no_proxy",
                      "value": "foo,bar,baz"
                    },
                    {
                      "name": "JAVA_PROXY_OPTIONS",
                      "value": "-Dhttp.proxyHost=foo.bar -Dhttps.proxyHost=foo.bar -Dhttp.proxyPort=5224 -Dhttps.proxyPort=5224 -Dhttp.nonProxyHosts=foo|bar|baz"
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    }
  ]
}
